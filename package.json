{
  "name": "jorgechato-com",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "remix vite:build",
    "deploy": "pnpm run build && wrangler pages deploy",
    "dev": "remix vite:dev --host 0.0.0.0",
    "lint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
    "start": "wrangler pages dev ./build/client",
    "typecheck": "tsc",
    "typegen": "wrangler types",
    "preview": "pnpm run build && wrangler pages dev",
    "cf-typegen": "wrangler types",
    "generate-models": "find public -name '*.glb' -exec sh -c 'npx gltfjsx \"$1\" -t --types --keepnames --shadows -o \"./app/components/models/$(basename \"$1\" .glb).tsx\"' _ {} \\;"
  },
  "dependencies": {
    "@fontsource-variable/figtree": "^5.2.6",
    "@react-three/drei": "^10.0.6",
    "@react-three/fiber": "^8.18.0",
    "@remix-run/cloudflare": "^2.16.5",
    "@remix-run/cloudflare-pages": "^2.16.5",
    "@remix-run/node": "^2.16.5",
    "@remix-run/react": "^2.16.5",
    "country-flag-emoji": "^1.0.3",
    "isbot": "^5.1.26",
    "lucide-react": "^0.477.0",
    "luxon": "^3.6.1",
    "maath": "^0.10.8",
    "markdown-to-jsx": "^7.7.4",
    "mermaid": "^11.6.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "three": "^0.173.0",
    "three-stdlib": "^2.35.15"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.12.0",
    "@cloudflare/workers-types": "^4.20250410.0",
    "@eslint-react/eslint-plugin": "^1.43.0",
    "@eslint/eslintrc": "^3.3.1",
    "@remix-run/dev": "^2.16.5",
    "@tailwindcss/postcss": "^4.1.7",
    "@tailwindcss/typography": "^0.5.16",
    "@types/luxon": "^3.6.2",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.2",
    "@types/three": "^0.173.0",
    "@typescript-eslint/eslint-plugin": "^8.29.1",
    "@typescript-eslint/parser": "^8.29.1",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-import-resolver-typescript": "^3.10.0",
    "eslint-plugin-format": "^1.0.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.2.6",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "tailwindcss": "^4.1.3",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vite-tsconfig-paths": "^5.1.4",
    "wrangler": "3.109.1"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
